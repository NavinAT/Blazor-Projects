@page "/counter"
@inject CounterService counterService

<h1>Counter</h1>

<p>Current count: @counterService.GetCurrentCount()</p>

<button class="btn btn-primary" @onclick="@IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="@counterService.Reset">Reset</button>

@code
{

    void IncrementCount()
    {
        int CurrentCount = counterService.GetCurrentCount();

        CurrentCount++;

        counterService.SetCurrentCount(CurrentCount);
    }
}